{
    "file-tasks": {
        "tasks-attributes": {
            "required": true,
            "min-count": 1
        },
        "copy-file": {
            "parameters": {
                "source": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "target": {
                    "element": "select",
                    "options": [
                        "opt1",
                        "opt2",
                        "opt3"
                    ],
                    "required": true,
                    "placeholder": "\\"
                },
                "filename": {
                    "element": "textarea",
                    "required": true
                }
            },
            "action": "copy.ps1"
        },
        "delete-file": {
            "parameters": {
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "filename": {
                    "element": "input-text",
                    "required": true
                }
            },
            "action": "delete.ps1"
        },
        "move-file": {
            "parameters": {
                "source": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "filename": {
                    "element": "input-text",
                    "required": true
                }
            },
            "action": "move.ps1"
        },
        "rename-file": {
            "parameters": {
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "filename": {
                    "element": "input-text",
                    "required": true
                }
            },
            "action": "rename.ps1"
        },
        "backup-file": {
            "parameters": {
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "filename": {
                    "element": "input-text",
                    "required": true
                }
            },
            "action": "backup.ps1"
        }
    },
    "folder-tasks": {
        "tasks-attributes": {
            "required": true,
            "min-count": 1
        },
        "create-folder": {
            "parameters": {
                "target": {
                    "required": true,
                    "element": "input-text",
                    "format": "\\"
                },
                "folder": {
                    "element": "input-text",
                    "required": true
                }
            },
            "action": "createFolder.ps1"
        },
        "copy-folder": {
            "parameters": {
                "source": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                }
            },
            "action": "copyFolder.ps1"
        },
        "move-folder": {
            "parameters": {
                "source": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                },
                "target": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                }
            },
            "action": "copyFolder.ps1"
        }
    },
    "batch-tasks": {
        "tasks-attributes": {
            "required": true,
            "min-count": 1
        },
        "run-batch": {
            "parameters": {
                "serverToRun": {
                    "element": "input-text",
                    "required": false,
                    "format": "\\"
                },
                "script": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                }
            },
            "action": "runWinBatch.ps1"
        },
        "run-ps1": {
            "parameters": {
                "serverToRun": {
                    "element": "input-text",
                    "required": false,
                    "format": "\\"
                },
                "script": {
                    "element": "input-text",
                    "required": true,
                    "format": "\\"
                }
            },
            "action": "runPs1.ps1"
        }
    }
}